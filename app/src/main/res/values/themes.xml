<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base Theme (구글맵/머티리얼3 등 둘 중 더 최신/완성도 있는 것으로) -->
    <style name="Base.Theme.MyMaps" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:statusBarColor">@android:color/white</item>
        <item name="android:windowLightStatusBar" tools:targetApi="23">true</item>
        <item name="chipStyle">@style/AppChipStyle</item>
 <!--       <item name="android:navigationBarColor">@color/white</item>-->
        <!-- 필요한 경우 아래 주석 해제
        <item name="colorPrimary">@color/my_light_primary</item>
        -->
    </style>

    <style name="Theme.MyMaps" parent="Base.Theme.MyMaps" />

    <!-- Chip Custom Style -->
    <style name="AppChipStyle" parent="Widget.MaterialComponents.Chip.Action">
        <item name="android:textColor">@color/chip_text_selector</item>
        <item name="android:textSize">14sp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:lineHeight" tools:targetApi="29">0sp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="chipBackgroundColor">@color/chip_selector</item>
        <item name="chipCornerRadius">24dp</item>
        <item name="chipMinHeight">35dp</item>
        <item name="chipStartPadding">8dp</item>
        <item name="chipEndPadding">8dp</item>
        <item name="iconStartPadding">4dp</item>
        <item name="iconEndPadding">4dp</item>
        <item name="chipStrokeColor">#CCCCCC</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="chipIconVisible">true</item>
        <item name="chipIconTint">@null</item>
        <item name="android:minHeight">35dp</item>
        <item name="ensureMinTouchTargetSize">false</item>
    </style>

</resources>
